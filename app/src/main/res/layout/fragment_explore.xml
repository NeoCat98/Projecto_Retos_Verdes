<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/card_view_margin"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="0dp"
                          android:id="@+id/tv_project_name_explore"
                          android:layout_weight="0.8"
                          android:text="project name"
                          android:layout_margin="@dimen/text_margin"
                          android:layout_height="wrap_content"/>

                <ImageButton
                        android:layout_width="0dp"
                        android:id="@+id/btn_add_favorite"
                        android:src="@drawable/ic_favorite_border_black_24dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_create_by_explore"
                        android:layout_margin="@dimen/text_margin"
                        android:text="Create by: "
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:id="@+id/tv_create_by_name_explore"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_description_explore"
                        android:layout_margin="@dimen/text_margin"
                        android:text="Description: "
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:id="@+id/tv_description_project_explore"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <RatingBar
                    android:layout_width="wrap_content"
                    android:id="@+id/rating_explore"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
